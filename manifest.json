{
  "manifest_version": 2,
  "version": "1.0",
  "minimum_chrome_version": "55",
  "name": "AutoPagerize",
  "description": "__MSG_description__",
  "default_locale": "en",
  "background": {
    "scripts": [
      "utils.js",
      "storage-chrome.js",
      "storage-idb.js",
      "background.js"
    ],
    "persistent": false
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_ui": {
    "page": "options.html"
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/off/icon16.png",
      "32": "icons/off/icon32.png"
    }
  },
  "permissions": [
    "<all_urls>",
    "storage",
    "tabs"
  ]
}
